{
  "title": "WAF Security Dashboard",
  "uid": "waf-security",
  "timezone": "browser",
  "refresh": "10s",
  "schemaVersion": 30,
  "panels": [
    {
      "datasource": "Loki",
      "gridPos": {"h": 6, "w": 4, "x": 0, "y": 0},
      "id": 10,
      "options": {
        "orientation": "auto",
        "reduceOptions": {"calcs": ["lastNotNull"], "fields": "", "values": false},
        "showThresholdLabels": false,
        "showThresholdMarkers": true,
        "textMode": "value"
      },
      "targets": [{
        "expr": "sum(count_over_time({container=\"waf-proxy\"} [$__range]))",
        "refId": "A"
      }],
      "title": "Total Requests",
      "type": "stat",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{"color": "blue", "value": null}]
          },
          "unit": "short",
          "noValue": "0"
        }
      }
    },
    {
      "datasource": "Loki",
      "gridPos": {"h": 6, "w": 4, "x": 4, "y": 0},
      "id": 11,
      "options": {
        "orientation": "auto",
        "reduceOptions": {"calcs": ["lastNotNull"], "fields": "", "values": false},
        "showThresholdLabels": false,
        "showThresholdMarkers": true,
        "textMode": "value"
      },
      "targets": [{
        "expr": "sum(count_over_time({container=\"waf-proxy\"} |~ \"\\\" (200|301|302|304) \" [$__range]))",
        "refId": "A"
      }],
      "title": "Success Requests",
      "type": "stat",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{"color": "green", "value": null}]
          },
          "unit": "short",
          "noValue": "0"
        }
      }
    },
    {
      "datasource": "Loki",
      "gridPos": {"h": 6, "w": 4, "x": 8, "y": 0},
      "id": 3,
      "options": {
        "orientation": "auto",
        "reduceOptions": {"calcs": ["lastNotNull"], "fields": "", "values": false},
        "showThresholdLabels": false,
        "showThresholdMarkers": true,
        "textMode": "value"
      },
      "targets": [{
        "expr": "sum(count_over_time({container=\"waf-proxy\"} |= \"403 Forbidden\" [$__range]))",
        "refId": "A"
      }],
      "title": "Blocked Requests",
      "type": "stat",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{"color": "green", "value": null}, {"color": "orange", "value": 10}, {"color": "red", "value": 50}]
          },
          "unit": "short",
          "noValue": "0"
        }
      }
    },
    {
      "datasource": "Prometheus",
      "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
      "id": 2,
      "options": {
        "orientation": "auto",
        "reduceOptions": {"calcs": ["lastNotNull"], "fields": "", "values": false},
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "pluginVersion": "9.0.0",
      "targets": [{"expr": "rate(nginx_http_requests_total[$__rate_interval])", "refId": "A"}],
      "title": "Request Rate",
      "type": "gauge",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{"color": "green", "value": null}, {"color": "red", "value": 80}]
          },
          "unit": "reqps"
        }
      }
    },
    {
      "datasource": "Loki",
      "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
      "id": 5,
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "pieType": "pie",
        "reduceOptions": {"calcs": ["lastNotNull"], "fields": "", "values": false},
        "tooltip": {"mode": "single"}
      },
      "targets": [{
        "expr": "sum(count_over_time({container=\"waf-proxy\"} |~ \"\\\" 200 \" [$__range]))",
        "legendFormat": "200",
        "refId": "A"
      },
      {
        "expr": "sum(count_over_time({container=\"waf-proxy\"} |~ \"\\\" 302 \" [$__range]))",
        "legendFormat": "302",
        "refId": "B"
      },
      {
        "expr": "sum(count_over_time({container=\"waf-proxy\"} |~ \"\\\" 403 \" [$__range]))",
        "legendFormat": "403",
        "refId": "C"
      },
      {
        "expr": "sum(count_over_time({container=\"waf-proxy\"} |~ \"\\\" 404 \" [$__range]))",
        "legendFormat": "404",
        "refId": "D"
      }],
      "title": "HTTP Status Codes",
      "type": "piechart"
    },
    {
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 6},
      "id": 4,
      "options": {
        "legend": {"calcs": [], "displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "single"}
      },
      "targets": [
        {"expr": "rate(nginx_http_requests_total[$__rate_interval])", "legendFormat": "Total Requests", "refId": "A"},
        {"expr": "rate(nginx_http_requests_total{status=~\"4..\"}[$__rate_interval])", "legendFormat": "4xx Errors", "refId": "B"},
        {"expr": "rate(nginx_http_requests_total{status=~\"5..\"}[$__rate_interval])", "legendFormat": "5xx Errors", "refId": "C"}
      ],
      "title": "Request Rate Over Time",
      "type": "timeseries",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": {"tooltip": false, "viz": false, "legend": false},
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "pointSize": 5,
            "scaleDistribution": {"type": "linear"},
            "showPoints": "never",
            "spanNulls": true
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{"color": "green", "value": null}]
          },
          "unit": "reqps"
        }
      }
    },
    {
      "datasource": "Loki",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
      "id": 6,
      "options": {
        "showLabels": false,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false
      },
      "targets": [{
        "expr": "{container=\"waf-proxy\"} |= \"ModSecurity\" |= \"denied\"",
        "refId": "A"
      }],
      "title": "WAF Blocked Requests (Recent)",
      "type": "logs"
    },
    {
      "datasource": "Loki",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
      "id": 12,
      "options": {
        "showLabels": false,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false
      },
      "targets": [{
        "expr": "{container=\"waf-proxy\"} |~ \"\\\" (200|301|302|304) \"",
        "refId": "A"
      }],
      "title": "WAF Success Requests (Recent)",
      "type": "logs"
    },
    {
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 22},
      "id": 7,
      "options": {
        "legend": {"calcs": [], "displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "single"}
      },
      "targets": [{
        "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[$__rate_interval])) * 100)",
        "legendFormat": "CPU Usage",
        "refId": "A"
      }],
      "title": "System CPU Usage",
      "type": "timeseries",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisPlacement": "auto",
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 1,
            "showPoints": "never"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{"color": "green", "value": null}, {"color": "red", "value": 80}]
          },
          "unit": "percent"
        }
      }
    },
    {
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 22},
      "id": 8,
      "options": {
        "legend": {"calcs": [], "displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "single"}
      },
      "targets": [{
        "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
        "legendFormat": "Memory Usage",
        "refId": "A"
      }],
      "title": "System Memory Usage",
      "type": "timeseries",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisPlacement": "auto",
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 1,
            "showPoints": "never"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{"color": "green", "value": null}, {"color": "red", "value": 80}]
          },
          "unit": "percent"
        }
      }
    },
    {
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 22},
      "id": 9,
      "options": {
        "legend": {"calcs": [], "displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "single"}
      },
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total[$__rate_interval]) * 8",
          "legendFormat": "RX {{device}}",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total[$__rate_interval]) * 8",
          "legendFormat": "TX {{device}}",
          "refId": "B"
        }
      ],
      "title": "Network Traffic",
      "type": "timeseries",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisPlacement": "auto",
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 1,
            "showPoints": "never"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{"color": "green", "value": null}]
          },
          "unit": "bps"
        }
      }
    }
  ]
}
